<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.johndoe.demoqr.SobreActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/relativeLayout3">

        <TextView
            android:layout_width="210dp"
            android:layout_height="52dp"
            android:text="@string/sobreTitulo"
            android:id="@+id/textView"
            android:textColor="@color/colorWhite"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:background="@color/colorPrimary"
            android:paddingBottom="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="24sp" />

        <View
            android:layout_width="54dp"
            android:layout_height="52dp"
            android:background="@drawable/grade"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView"
            android:layout_toStartOf="@+id/textView"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/appInfo"
        android:id="@+id/textView2"
        android:gravity="center"

        android:textColor="@color/colorPrimary"
        android:typeface="sans"
        android:singleLine="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/sobreLogosLayout">


    </RelativeLayout>

    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:id="@+id/relativeLayout"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baldeacaologo"
            android:id="@+id/sobreLogoBaldeacao"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logoufc"
            android:id="@+id/sobreLogoUFC"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/sobreLogoBaldeacao"
            android:layout_toEndOf="@+id/sobreLogoBaldeacao" />

    </RelativeLayout>

</RelativeLayout>
