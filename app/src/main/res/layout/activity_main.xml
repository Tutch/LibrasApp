<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:textAlignment="center"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <Button android:id="@+id/scan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ler QR Code"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_below="@+id/qr_ins"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/qr_ins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false"
        android:text="@string/scan_qr_ins"
        android:textColor="@color/textColor"
        android:layout_marginTop="62dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/alfa_ins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false"
        android:text= "@string/scan_alfa_ins"
        android:textColor="@color/textColor"
        android:layout_below="@+id/scan_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:textSize="16sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alfa_text"
        android:layout_below="@+id/alfa_ins"
        android:layout_marginTop="16dp"
        android:height="34dp"
        android:layout_alignLeft="@+id/alfa_ins"
        android:layout_alignStart="@+id/alfa_ins"
        android:layout_alignRight="@+id/alfa_ins"
        android:layout_alignEnd="@+id/alfa_ins"
        android:background="@color/textColor"
        android:textSize="26sp"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:id="@+id/alfa_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Procurar por cÃ³digo"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/alfa_text"
        android:layout_centerHorizontal="true"
        android:textSize="14dp"
        android:enabled="false" />


</RelativeLayout>
